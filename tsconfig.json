{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "skipLibCheck": true,
    "declaration": true,         // Gera arquivos .d.ts para cada arquivo .ts ,
    "baseUrl": "./" ,
    "outDir": "./dist",
    "sourceMap": true
    /*"paths": {
      "@server/*": ["src/server/*"], 
      "@client/*": ["src/client/*"], 
      "@common/*": ["src/common/*"] 
    }*/
  },
  "include": [
    "src/**/*.ts","test/**/*.ts","./index.ts" ,"**/*.spec.ts"  ],
  "exclude":[
    "node_modules",
     "./index.d.ts",
     "./dist",
     "types"
  ]
  ,
    "typeRoots": [
        "node_modules/@types"
    ]
}
